#login-page-containter
  form(name='loginForm')
    #error-message {{errorMessage}}
    input(type='text', placeholder='user name', name='username', required, ng-model="user.username")
    input(type='password', placeholder='password', name='password', required, ng-model="user.password")
    button.button-bright(type='submit', value='Log In', ng-disabled='loginForm.$invalid', ng-click='login(user)') Log In
    #create-account-link-container
      a(href='/#/signup')='Create an account'